{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "[skip ci] chore: release",
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md",
        "**/perf/**"
      ]
    }
  },
  "lifecycle": {
    "version": "npm run build && git add ."
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}